<%= title "Avisos TTPD" %>



<table class ="table">
  <thead>
  <tr>
    <th>Content</th>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% Post.all.each do |post| %>

    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>

      <% if can? :update, post %>
        <td><%= link_to '', edit_post_path(post), class: 'btn btn-info glyphicon glyphicon-pencil'%></td>
        <td><%= link_to '', post, method: :delete, data: {confirm: 'Are you sure?'},
                        class: 'btn btn-info glyphicon glyphicon-remove' %></td>

      <% end %>
    </tr>



  <% end %>
  </tbody>
</table>
