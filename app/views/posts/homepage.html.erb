<%= title "Avisos TTPD" %>



<table class ="table">
  <thead>
  <tr>
    <th>Content</th>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% Post.all.each do |post| %>

    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>

      <% if can? :update, post %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
    </tr>



  <% end %>
  </tbody>
</table>
